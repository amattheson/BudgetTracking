<body>

<div class="container">
    <h2>Log Expense</h2>
    <form id="transForm">
        <label>Date</label>
        <input type="date" id="date" required>

        <label>Category</label>
        <select id="type" required>
            <option value="" disabled selected>Select...</option>
            <option value="Grocery">Grocery</option>
            <option value="Gas">Gas</option>
            <option value="Animal">Animal</option>
            <option value="Other">Other</option>
        </select>

        <label>Payment Method</label>
        <select id="method" required>
            <option value="Family Account" selected>The Family Account</option>
            <option value="Onepay CC">Onepay CC</option>
        </select>

        <label>Amount ($)</label>
        <input type="number" id="amount" placeholder="0.00" step="0.01" inputmode="decimal" required>

        <label>Description</label>
        <input type="text" id="description" placeholder="Optional notes...">

        <button type="submit" id="submitBtn">Track Expense</button>
    </form>
    <div id="status"></div>
</div>

<script>
    // ---------------------------------------------------------
    // STEP 2: PASTE YOUR GOOGLE URL BETWEEN THE QUOTES BELOW
    // ---------------------------------------------------------
    const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbyLi3dpzjMLaBgRfHuglR7z8d9sP7vse801Sgt5AZ8cTwFpQaPOtYgnMSH58QhkVEg3TQ/exec'; 
    // ---------------------------------------------------------

    const form = document.getElementById('transForm');
    const statusDiv = document.getElementById('status');
    const submitBtn = document.getElementById('submitBtn');
    const dateInput = document.getElementById('date');

    const today = new Date();
    const localDate = today.getFullYear() + '-' + String(today.getMonth() + 1).padStart(2, '0') + '-' + String(today.getDate()).padStart(2, '0');
    dateInput.value = localDate;

    form.addEventListener('submit', e => {
        e.preventDefault();
        
        if (SCRIPT_URL.includes('PASTE') || SCRIPT_URL === '') {
             statusDiv.textContent = "Error: You forgot to paste the Google URL in the file!";
             statusDiv.className = 'error';
             return;
        }

        submitBtn.disabled = true;
        submitBtn.textContent = "Saving...";
        statusDiv.textContent = "";

        const formData = {
            date: dateInput.value,
            type: document.getElementById('type').value,
            method: document.getElementById('method').value,
            amount: document.getElementById('amount').value,
            description: document.getElementById('description').value
        };

        fetch(SCRIPT_URL, {
            method: 'POST',
            mode: 'no-cors',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
        })
        .then(() => {
            statusDiv.textContent = "Transaction Logged.";
            statusDiv.className = 'success';
            form.reset();
            dateInput.value = localDate; 
            document.getElementById('method').value = "Family Account"; 
            setTimeout(() => {
                submitBtn.disabled = false;
                submitBtn.textContent = "Track Expense";
                statusDiv.textContent = "";
            }, 2000);
        })
        .catch(error => {
            console.error('Error:', error);
            statusDiv.textContent = "Failed to save.";
            statusDiv.className = 'error';
            submitBtn.disabled = false;
            submitBtn.textContent = "Track Expense";
        });
    });
</script>

</body>
</html>
